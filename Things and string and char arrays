#include <iostream>
using namespace std;

int main()
{
    // Exercise 1
    // start
    char a[2][15];
    strcpy_s(a[0], "Hello, ");
    strcpy_s(a[1], "world! ");
    strcat_s(a[0], a[1]);
    string b = a[0];
    int len = int(strlen(a[0]));
    cout << "Array of char: " << a[0] << "\nArray length: " << len << "\nString: " << b;
    // end

    // Exercise 2
    // start
    char Arr[20][10];
    char c = NULL;
    char word[10];
    int i = 0;
    cout << "\nInput up to 20 words with up to 10 letters (break with enter) ";
    while (c != '\n')
    {
        if (i == 20)
        {
            cout << "\nToo many words. ";
            break;
        }
        int j = 0;
        while (c != ' ')
        {
            if (j == 10)
            {
                cout << "\nWord is too long. ";
                break;
            }
            cin >> c;
            word[j] = c;
            j++;
        }
        strcpy_s(Arr[i], word);
        fill_n(word, 10, "");
        i++;
    }
    for (i = 0; i != 19; i++)
    {
        cout << Arr[i] << " ";
    }
    // end
}
